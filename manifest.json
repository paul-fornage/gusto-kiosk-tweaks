{
  "manifest_version": 3,
  "name": "Gusto Kiosk Tweaks",
  "version": "1.0",
  "author": "Paul Fornage",
  "homepage_url": "https://github.com/paul-fornage/gusto-kiosk-tweaks",
  "description": "Keyboard shortcuts for Gusto Kiosk",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://kiosk.gusto.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://kiosk.gusto.com/*"],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "action": {
    "default_title": "Gusto Kiosk Tweaks Settings",
    "default_popup": "options.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "gusto-tweaks@paul.fornage.org"
    }
  }
}
